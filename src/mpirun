#!/bin/bash
# Ignore arguments -n and a
shift 2

# Check if two arguments are passed
if [ "$#" -ne 2 ]; then
  echo "Error: Expected two arguments, found $# arguments."
  exit 1
fi

# Extract the arguments
file="$1"
arg="$2"

# Check if the file exists
if [ ! -f "$file" ]; then
  echo "Error: File $file not found."
  exit 1
fi

# Run the file with the given argument
gcc "$file" -o "${file%.*}" && ./"${file%.*}" "$arg"
